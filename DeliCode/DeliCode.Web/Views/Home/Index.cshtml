@model List<Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Recomended Products</h1>
</div>
<br />

<div id="carouselControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @{
            var first = true;
        }
        @foreach (var item in Model)
        {
            <div class="carousel-item @(first ? Html.Raw("active") : Html.Raw(""))" , style="height: 35rem;">
                <a href="@Url.Action("Details", "Product",new { productId=item.Id })">
                    <img class="card-img" src="@item.ImageUrl" alt="@item.Name">
                </a>
            </div>
            first = false;
        }
    </div>

    <a class="carousel-control-next" href="#carouselControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon"></span>
        <span class="sr-only">Next</span>
    </a>

    <a class="carousel-control-prev" href="#carouselControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
        <span class="sr-only">Previous</span>
    </a>
</div>
