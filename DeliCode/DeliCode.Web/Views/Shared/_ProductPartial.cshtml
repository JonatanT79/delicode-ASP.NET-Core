@model DeliCode.Library.Models.Product

<div class="card deck">
    <img class="card-img" src="https://picsum.photos/286/180" alt="@Model">
    <div class="card-body">
        <div class="card-title">
            @Model.Name
        </div>
        <div class="card-text">
            @Model.Description
        </div>
        <div class="buy d-flex justify-content-between align-items-center">
            <div class="price text-success"><h5 class="mt-4">@Model.Price kr</h5></div>
            <button class="btn btn-primary">Lägg till</button>
        </div>
    </div>
</div>
